<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mohamed.simpleconverter.Fragments.VolumeActivityFragment">

    <android.support.v7.widget.CardView
        style="@style/HeaderCardView">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow>

                <TextView
                    android:id="@+id/tvFromVal"
                    style="@style/UnitText"
                    android:text="@string/litre" />

                <TextView
                    android:id="@+id/tvToRes"
                    style="@style/UnitText"
                    android:text="@string/cubcm" />
            </TableRow>

            <TableRow>

                <EditText
                    android:id="@+id/etValue"
                    style="@style/ValueEditText" />

                <EditText
                    android:id="@+id/etResult"
                    style="@style/ResultEditText" />
            </TableRow>
        </TableLayout>

    </android.support.v7.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    style="@style/UnitsCardView"
                    android:layout_marginEnd="4dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginStart="8dp">

                    <RadioGroup
                        android:id="@+id/rgfrom"
                        style="@style/UnitsRadioGroup">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/from" />

                        <RadioButton
                            android:id="@+id/rbLitre1"
                            style="@style/UnitRadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="@string/litre" />

                        <RadioButton
                            android:id="@+id/rbCCm1"
                            style="@style/UnitRadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cubcm" />

                        <RadioButton
                            android:id="@+id/rbCM1"
                            style="@style/UnitRadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cubm" />

                        <RadioButton
                            android:id="@+id/rbCI1"
                            style="@style/UnitRadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cubinch" />

                        <RadioButton
                            android:id="@+id/rbCF1"
                            style="@style/UnitRadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cubfoot" />

                        <RadioButton
                            android:id="@+id/rbCY1"
                            style="@style/UnitRadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cubyard" />

                    </RadioGroup>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    style="@style/UnitsCardView"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="4dp">

                    <RadioGroup
                        android:id="@+id/rgTo"
                        style="@style/UnitsRadioGroup">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/to" />

                        <RadioButton
                            android:id="@+id/rbLitre2"
                            style="@style/UnitRadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/litre" />

                        <RadioButton
                            android:id="@+id/rbCCm2"
                            style="@style/UnitRadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="@string/cubcm" />

                        <RadioButton
                            android:id="@+id/rbCM2"
                            style="@style/UnitRadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cubm" />

                        <RadioButton
                            android:id="@+id/rbCI2"
                            style="@style/UnitRadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cubinch" />

                        <RadioButton
                            android:id="@+id/rbCF2"
                            style="@style/UnitRadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cubfoot" />

                        <RadioButton
                            android:id="@+id/rbCY2"
                            style="@style/UnitRadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cubyard" />

                    </RadioGroup>
                </android.support.v7.widget.CardView>
            </LinearLayout>
    </ScrollView>

</LinearLayout>
