<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mohamed.simpleconverter.Fragments.WeightActivityFragment">

    <android.support.v7.widget.CardView style="@style/HeaderCardView">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow>

                <TextView
                    android:id="@+id/tvFromVal"
                    style="@style/UnitText"
                    android:text="@string/gram" />

                <TextView
                    android:id="@+id/tvToRes"
                    style="@style/UnitText"
                    android:text="@string/kgarm" />
            </TableRow>

            <TableRow>

                <EditText
                    android:id="@+id/etValue"
                    style="@style/ValueEditText" />

                <EditText
                    android:id="@+id/etResult"
                    style="@style/ResultEditText" />
            </TableRow>
        </TableLayout>

    </android.support.v7.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                style="@style/UnitsCardView"
                android:layout_marginEnd="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:layout_marginStart="8dp">

                <RadioGroup
                    android:id="@+id/rgfrom"
                    style="@style/UnitsRadioGroup">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/from" />

                    <RadioButton
                        android:id="@+id/rbGram1"
                        style="@style/UnitRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/gram" />

                    <RadioButton
                        android:id="@+id/rbKilogram1"
                        style="@style/UnitRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/kgarm" />

                    <RadioButton
                        android:id="@+id/rbPound1"
                        style="@style/UnitRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pound" />

                    <RadioButton
                        android:id="@+id/rbTon1"
                        style="@style/UnitRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ton" />

                </RadioGroup>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/UnitsCardView"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="4dp">

                <RadioGroup
                    android:id="@+id/rgTo"
                    style="@style/UnitsRadioGroup">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/to" />

                    <RadioButton
                        android:id="@+id/rbGram2"
                        style="@style/UnitRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gram" />

                    <RadioButton
                        android:id="@+id/rbKilogram2"
                        style="@style/UnitRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/kgarm" />

                    <RadioButton
                        android:id="@+id/rbPound2"
                        style="@style/UnitRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pound" />

                    <RadioButton
                        android:id="@+id/rbTon2"
                        style="@style/UnitRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ton" />

                </RadioGroup>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
